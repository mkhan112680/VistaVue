    <div class="row " style="color:green;">
        <div style="text-align:center" v-model="Message">
            {{this.Message}}
        </div>
    </div>
    <div class="grow" style="text-align:right">
        <input type="image" id="btn-save-payee"
               data-url='@Url.Action("SavePayee","Physician")'
               src="@Resources.Resource.BTN_SUBMIT_URL" v-on:click="SavePayee()" />
    </div>
    <br /><br />
</div>





