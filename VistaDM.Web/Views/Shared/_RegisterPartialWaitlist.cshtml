<style>
    .noLink {
        text-decoration: none;
    }
</style>
<table width="40%" border="0" style="float:right" cellspacing="0">
    <tr>
        <td align="right">
            <div style="width:405px; text-align:center">

                <table width="405" border="0" align="right" cellpadding="0" cellspacing="0">
                    <tr>
                        <td><img src="@Resources.Resource.WAITLIST_IMG" width="405" height="63" /></td>
                    </tr>
                    <tr>
                        <td bgcolor="#E7E8E9">
                            <table width="90%" border="0" cellpadding="3" style="margin-left:auto; margin-right:auto;">
                                <tr>
                                    <td colspan="2" style="font-size: 12px" align="center">
                                        @Html.Raw(@Resources.Resource.WaitlistCaption)
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="padding:5px" align="center">
                                        <div class="regid">
                                            <input placeholder="@Resources.Resource.Unique_Reg_ID" type="text" id="txtRegCode" name="txtRegCode">
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <div class="grow">
                                            <a id="hlSubmitWaitList" href='#'><img src="@Resources.Resource.WAITLIST_REG_URL" border="0" /></a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="grow" >
                                            <a id="hlNotInterested" href='#'><img src="@Resources.Resource.WAITLIST_NOT_URL" border="0" /></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" align="center">
                                        <div class="greycondensed">
                                            <span id="spanRegResult"></span>
                                        </div>
                                        <div class="greycondensed">@Html.Raw(@Resources.Resource.DONT_HAVE_REG)</div>
                                    </td>
                                </tr>

                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td><img src="../images/waitlist_footer.png" width="405" height="29" /></td>
                    </tr>
                </table>

            </div>
        </td>
    </tr>
    <tr>
        <td class="smallgrey" align="right" valign="top">
            <img src="~/images/canada_flag.png" /> Canada |
            <span id="spnLang">
                @(VistaDM.Web.Helpers.Constants.GetCurrentLanguage())
            </span> (<a class="noLink" id="hlChangeCulture" href='@Url.Action("ToggleCulture", "Culture", new { orgUrl = Request.Url.AbsoluteUri })'>change</a>)
        </td>
    </tr>
    <tr><td>&nbsp;</td></tr>
</table>