@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm("WaitlistRegister", "Physician", FormMethod.Post, new { inv = @Model }))
{

    <div id="maincontent">
        <br /><br /><br /><br />
        <div id="registerheader">
            <p >
                @Html.Raw(@Resources.Resource.WAITLISTREGISTRATION)
            </p>
        </div><!--end of registerheader-->
        <div id="registermain">
            <span style="font-family: 'Open Sans Condensed', sans-serif; font-weight:700; font-size:18px; color:#333">
               
               @Html.Raw( @Resources.Resource.WaitlistHeader)
            </span>
            <br /><br /><br />
            <table width="70%" border="0" cellspacing="0" cellpadding="0" style="margin-left:auto; margin-right:auto; text-align:left">

                <tr>
                    <td class="italic">@Resources.Resource.REGISTER_FIRSTNAME</td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(x => x.FirstName, new { @readonly = true })
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td class="italic">@Resources.Resource.REGISTER_LASTNAME</td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(x => x.LastName, new { @readonly = true })
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td class="italic">@Resources.Resource.REGISTER_CITY</td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(x => x.City, new { @readonly = true })
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td class="italic">@Resources.Resource.REGISTER_PROVINCE</td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(x => x.Province.Name, new { @readonly = true })
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td class="italic">@Resources.Resource.WAITLIST_EMAIL</td>
                </tr>
                <tr>
                    <td>
                         
                        @Html.TextBoxFor(x => x.Email)
                        <span class="errorMssg">
                            @Html.ValidationMessageFor(x => x.Email)
                            @Html.ValidationMessage("EMAIL_REQ")
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
            <div class="grow">
                <input type="image" value="submit" src=@Resources.Resource.JOINWAITLIST_IMG />
                @*<a href='@Url.Action("CompleteRegistrationWaitList", "Physician")'><img src="../images/button_join-waitlist.png" border="0" /></a>*@
            </div>
        </div><!--end of registermain-->
        <div id="registerfooter">
        </div><!--end of registerfooter-->
        <br /><br /><br /><br />
    </div>

}