@section scripts
{
    <script>

        var ShowOptionSelected = function () {

            //com
            if ($("#squaredThree3").prop("checked"))
                HideCompanyDiv(true);

            //personal
            if ($("#squaredThree2").prop("checked"))
                HideCompanyDiv(false);

        };

        var HideAll = function () {

            $("#companyDiv").hide();
            $("#personalDiv").hide();
        };

        var HideCompanyDiv = function (hide) {

            if (hide) {

                $("#companyDiv").hide();
                $("#personalDiv").show();

                $("#hdnPayeeTypeCompany").val(0);
                $("#hdnPayeeTypePersonal").val(1);
            }
            else {

                $("#companyDiv").show();
                $("#personalDiv").hide();

                $("#hdnPayeeTypeCompany").val(1);
                $("#hdnPayeeTypePersonal").val(0);
            }
        };

        var companyClicked = function () {

            $("#squaredThree3").prop("checked", false);

            HideCompanyDiv(false);

        };

        var personalClicked = function () {

            $("#squaredThree2").prop("checked", false);

            HideCompanyDiv(true);

        };

        $(document).ready(function () {

            HideAll();

            $("#squaredThree2").click(companyClicked);

            $("#squaredThree3").click(personalClicked);

            ShowOptionSelected();
        });

    </script>
}

